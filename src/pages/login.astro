---
import BaseLayout from "../layouts/baseLayout.astro";
import Header from "../components/header.astro";
import Footer from "../components/footer.astro";
---
<BaseLayout title="Inicio de sesión">
    <Header slot="header" />
    <main>
        <section id="login" role="form">
            <h1>Iniciar Seseión</h1>

            <form action="">
                <div class="form-group">
                    <label for="email">Email:</label>
                    <input id="email" type="email" name="email" required placeholder="usuario@email.com" />
                </div>
                <div class="form-group">
                    <label for="contrasena">Contraseña:</label>
                    <input id="contrasena" type="password" name="contrasena" required placeholder="Introduce tu contraseña" />
                </div>
                <div class="form-group checkbox">
                    <input id="recordar" type="checkbox" name="recordar" />
                    <label for="recordar">Recordarme</label>
                </div>

                <p><a href="#">Olvidaste tu contraseña?</a></p>

                <button type="submit" class="btn-primary">Iniciar Sesión</button>
            </form>

            <p>No tienes cuenta?<a href="/registro">Registrate aquí</a></p>
        </section>
    </main>
	<Footer slot="footer" />
</BaseLayout>